{% extends 'base.html.twig' %}

{% block title %}Résultats{% endblock %}

{% block body %}
    <h1>Résultats</h1>
    <hr>
    <h2><strong>{{ row.dance.nameDance }}</strong> | <strong>{{ row.formation }}</strong> | <strong>{{ row.category.nameCategory }}</strong></h2>
    <h3>Tour <strong>{{ row.numTour }}</strong></h3><br>
    <a href="{{ path('Final.imprimer.podium',{id:row.id, res:resultats, indic:1}) }}" target="_blank" class="btn btn-info">Imprimer podium</a>
    <a href="{{ path('Final.imprimer.resultats',{id:row.id, res:resultats, indic:1}) }}" target="_blank" class="btn btn-info">Imprimer les résultats</a>
    <br><br>

    <div class="list-group">

    </div>
    <table class="table table-striped">
        <thead class="thead-light">
        <tr>
            <th scope="col">Place</th>
            <th scope="col">Équipe</th>
            <th scope="col">Résultat</th>
        </tr>
        </thead>
        <tbody>
        {% set place=1 %}
        {% for resultat in resultats %}
            <tr>
                <th scope="row">{{ place }}</th>
                <td><strong>{{ resultat[1] }}</strong></td>
                <td><strong style="color: green">{{ resultat[0] }}</strong></td>
            </tr>
            {% set place=place+1 %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}