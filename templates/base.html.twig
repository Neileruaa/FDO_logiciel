<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" href="{{ asset('Images/icone.ico') }}" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>

    {% block navigation %}
        {% include 'navbar.html.twig' %}
    {% endblock %}

    {% block content %}
        <div class="container text-center jumbotron" style="margin-top: 100px;">

            {% block flashMessage %}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show mb-4" role="alert">
                            <strong>{{ message }}</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}

            {% block body %}{% endblock %}
        </div>

        {% block footer %}
        {% endblock %}
    {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script defer src="{{ asset('fontawesome/js/all.js') }}"></script>
            {# important le jquery si permet de ne pas utiliser de cdn #}
            <script src="{{ asset('jquery.js') }}"></script>
        {% endblock %}
    </body>
</html>
